<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="260dp"
    android:layout_width="fill_parent"
    >
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:hint="Type password here"
        android:textSize="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/etParentalUsername" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:hint="Type username here"
        android:textSize="30dp"
        android:id="@+id/etParentalPassword"
        android:layout_above="@+id/bParentalOK"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#2BE300"
        android:textColor="#000000"
        android:text="Ok"
        android:id="@+id/bParentalOK"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
