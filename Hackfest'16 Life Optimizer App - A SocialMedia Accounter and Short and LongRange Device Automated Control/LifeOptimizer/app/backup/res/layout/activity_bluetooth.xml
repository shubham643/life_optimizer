<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.thenewboston.lifeoptimizer.Bluetooth">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan for Devices"
        android:id="@+id/bBlutoothScan"
        android:onClick="sendViaBluetooth"
        android:layout_marginTop="52dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Devices"
        android:id="@+id/tvBluetooth"
        android:layout_below="@+id/bBlutoothScan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/bBluetoothConnect"
        android:layout_below="@+id/tvBluetooth"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appliance Control"
        android:id="@+id/bBluetoothControl"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/bBluetoothConnect"
        android:layout_alignLeft="@+id/bBlutoothScan"
        android:layout_alignStart="@+id/bBlutoothScan" />
</RelativeLayout>
